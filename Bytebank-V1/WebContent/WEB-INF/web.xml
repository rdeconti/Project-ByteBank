<?xml version="1.0" encoding="UTF-8"?>
		
<web-app
    xmlns="http://xmlns.jcp.org/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
    version="4.0">
	
	<!-- https://www.codejava.net/coding/jsp-servlet-jdbc-mysql-create-read-update-delete-crud-example -->
	
	<display-name>ByteBank Application</display-name>
	
	<welcome-file-list>
  	  <welcome-file>/WEB-INF/javaServerPages/package.jsp</welcome-file>
   	  <!--  <welcome-file>/WEB-INF/html/package.html</welcome-file> -->
	</welcome-file-list>
	
	<session-config>
		<session-timeout>20</session-timeout>
	</session-config>

    <context-param>
        <param-name>jdbcURL</param-name>
        <param-value>jdbc:mysql://localhost:3306/bookstore</param-value>
    </context-param>
 
    <context-param>
        <param-name>jdbcUsername</param-name>
        <param-value>root</param-value>
    </context-param>
 
    <context-param>
        <param-name>jdbcPassword</param-name>
        <param-value>P@ssw0rd</param-value>
    </context-param>
    
	<servlet>
	 <servlet-name>PackageServlet</servlet-name>
	 <servlet-class>br.com.bytebank.Servlet.PackageServlet</servlet-class>
	</servlet>
	
	<servlet-mapping>
	  <servlet-name>PackageServlet</servlet-name>
	  <url-pattern>/PackageServlet</url-pattern>
	</servlet-mapping>
	
	<error-page>
		<exception-type>java.lang.Exception</exception-type>
		<location>/WEB-INF/javaServerPages/error.jsp</location>
	</error-page>
	
</web-app>